// backend/tsconfig.json
{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "baseUrl": ".",
    "allowJs": false // Mant√©n esto en false si quieres un proyecto TS puro
    // "paths": {} // Descomenta y configura si usas alias
  },
  "include": [
    "**/*.ts" // Solo incluye archivos .ts
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
